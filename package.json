{
  "name": "commitground-tools-app",
  "version": "0.1.0",
  "description": "Tools for commitground",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run package-mac; npm run package-win; npm run package-linux",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=builds",
    "package-win": "electron-packager . commitground-tools-app --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=builds --version-string.CompanyName=commitground --version-string.FileDescription=commitground --version-string.ProductName=\"Commitground Tools\"",    
    "package-linux": "electron-packager . commitground-tools-app --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/128x128.png --prune=true --out=builds"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commitground/work-tools.git"
  },
  "keywords": [
    "Commitground",
    "work",
    "tools"
  ],
  "author": "Commitground",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-packager": "^12.1.0"
  },
  "bugs": {
    "url": "https://github.com/commitground/work-tools/issues"
  },
  "homepage": "https://github.com/commitground/work-tools#README.md",
  "dependencies": {
    "electron-localshortcut": "^3.1.0",
    "electron-tabs": "^0.9.1"
  }
}
